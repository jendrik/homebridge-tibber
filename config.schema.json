{
  "pluginAlias": "tibber",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "apiKey": {
      "title": "API Key",
      "type": "string",
      "placeholder": "5K4MVS-OjfWhK_4yrjOlFe1F6kJXPVf7eQYggo8ebAE",
      "description": "Tibber API Key"
    },
    "devices": {
      "type": "array",
      "items": {
        "title": "Sensors",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true,
            "placeholder": "Display Name for Home"
          },
          "id": {
            "title": "Home ID",
            "type": "string",
            "placeholder": "96a14971-525a-4420-aae9-e5aedaa129ff",
            "description": "Tibber Home ID"
          },
          "level": {
            "title": "Price Level",
            "type": "string",
            "description": "Tibber Price Level",
            "required": true,
            "default": "NORMAL",
            "oneOf": [
              {
                "title": "Very Cheap",
                "enum": [
                  "VERY_CHEAP"
                ]
              },
              {
                "title": "Cheap",
                "enum": [
                  "CHEAP"
                ]
              },
              {
                "title": "Normal",
                "enum": [
                  "NORMAL"
                ]
              },
              {
                "title": "Expensive",
                "enum": [
                  "EXPENSIVE"
                ]
              },
              {
                "title": "Very Expensive",
                "enum": [
                  "VERY_EXPENSIVE"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "devices",
      "type": "array",
      "orderable": false,
      "buttonText": "Add Sensor",
      "items": [
        "devices[].name",
        "devices[].id",
        "devices[].level"
      ]
    },
    {
      "type": "section",
      "title": "Global",
      "expandable": true,
      "expanded": false,
      "items": [
        "apiKey"
      ]
    }
  ]
}